<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" x:Class="Interface_3fev.MainWindow"
        ResizeMode="CanResizeWithGrip"
        Title="Lister" Height="320" MinHeight="320" Width="515" MinWidth="515"
        Icon="Program-icon.ico">
    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="grid" Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background)" Storyboard.TargetName="grid">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <SolidColorBrush Color="#FF1ABC9C"/>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed"/>
                                    <VisualState x:Name="Disabled"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="Quitter" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="grid" Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background)" Storyboard.TargetName="grid">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <SolidColorBrush Color="#C0392B"/>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed"/>
                                    <VisualState x:Name="Disabled"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter HorizontalAlignment="Center"
                    			VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="Grid" Background="#FF2C3E50" MouseDown="Grid_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="21"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="257*"/>
            <ColumnDefinition Width="258*"/>
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" Text="Jordan Fillion" VerticalAlignment="Top" Width="224" Foreground="#FFD85252" Height="16"/>
        <ListBox x:Name="listBox" Margin="10" Background="#FFBDC3C7" Grid.Row="1"/>

        <!--<Canvas x:Name="canvas">-->
        <TextBlock x:Name="labelDebug" TextWrapping="Wrap" Text="Visualisation/Edition de save.json" Foreground="#FFD84B51" Grid.Column="1" Margin="5,5,0,0" HorizontalAlignment="Left" Width="177"/>
        <Button x:Name="buttomExit" Style="{StaticResource Quitter}" Content="X" Click="Button_Click" ToolTip="Quitter" Background="#FFE74C3C" HorizontalAlignment="Right" MinHeight="21" MaxHeight="21" MaxWidth="60" Width="38" Grid.Column="1"/>
        <Button x:Name="buttomMinimise" Style="{StaticResource Quitter}" Content="_" Click="Button_Minimise" ToolTip="Quitter" Background="#3498db" HorizontalAlignment="Right" MinHeight="21" MaxHeight="21" MaxWidth="60" Width="38" Margin="0,0,38,0" Grid.Column="1"/>

        <Grid x:Name="Grid2"  Grid.Column="1" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="RemoveGrid" Height="13*"/>
                <RowDefinition Height="53"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="texteboxDebug" Margin="10,10,10,0" TextWrapping="Wrap" Foreground="#FF0F0F0F" Background="#FFBDC3C7"/>
            <Grid Grid.Row="1" Margin="0,45,0,0" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="86*"/>
                    <ColumnDefinition Width="86*"/>
                    <ColumnDefinition Width="86*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="58*"/>
                    <RowDefinition Height="58*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
                <Button x:Name="Lire_Fichier" Style="{StaticResource MyButtonStyle}" Content="Lire Fichier" Margin="10,10,10,1" Click="buttonLireFichier_click" ToolTip="Remplace le contenue de la liste par celui du fichier json." Background="#2ecc71" BorderBrush="#FF27AE60" MinHeight="22" Grid.Column="0" />
                <Button x:Name="Enlever" Style="{StaticResource MyButtonStyle}" Content="Enlever" Margin="10,10,10,1" Click="buttonEnlever_click" ToolTip="Supprime la ligne selectionner dans la liste." Background="#2ecc71" BorderBrush="#FF27AE60" MinHeight="22" Grid.Column="1" />
                <Button x:Name="Debug" Style="{StaticResource MyButtonStyle}" Content="Debug" Margin="10,10,10,1" Click="buttonDebug_click" ToolTip="Permet de visualiser le contenue du tableau." Background="#2ecc71" BorderBrush="#FF27AE60" MinHeight="22" Grid.Column="2" />

                <Button x:Name="Refresh" Style="{StaticResource MyButtonStyle}" Content="Recharger" Margin="10,5,10,8" Click="buttonRefresh_click" ToolTip="Rafraichie le contenue de la liste." Background="#2ecc71" BorderBrush="#FF27AE60" MinHeight="22" Grid.Row="1"/>
                <Button x:Name="Ajouter" Style="{StaticResource MyButtonStyle}" Content="Ajouter" Margin="10,4,10,8" Click="bottomAjouter_click" ToolTip="Ajoute une ligne dans la liste." Background="#2ecc71" BorderBrush="#FF27AE60" MinHeight="22" Grid.Column="1" Grid.Row="1"/>
                <Button x:Name="Enregistrer" Style="{StaticResource MyButtonStyle}" Content="Enregistrer" Margin="10,5,10,8" Click="boutonEnregistrer_Click" ToolTip="Enregistre le contenue de la liste dans un fichier texte." Background="#2ecc71" BorderBrush="#FF27AE60" MinHeight="22" Grid.Column="2" Grid.Row="1" />
            </Grid>
            <RadioButton x:Name="Ascendant" Content="Ascendant" Margin="10,10,0,26" Checked="Ascendant_Checked" Foreground="White" ToolTip="Met en ordre croissant la liste." Grid.Row="1" HorizontalAlignment="Left" Width="100"/>
            <RadioButton x:Name="Descendant" Content="Descendant" HorizontalAlignment="Left" Margin="10,31,0,5" Checked="Descendant_Checked" Foreground="White" ToolTip="Met en ordre decroissant la liste." Width="100" Grid.Row="1"/>
            <Button x:Name="buttomTxt2Json" Style="{DynamicResource MyButtonStyle}" Content="Convertir Txt en Json" Margin="0,4,10,26" Click="buttomTxt2Json_Click" Background="#2ecc71" BorderBrush="#FF27AE60" MinHeight="22" MaxHeight="22" Grid.Row="1" HorizontalAlignment="Right" Width="130" ToolTip="charge un fichier separer avec des espaces et le converti en Json au format aproprier pour ce programme et le save."/>
            <Button x:Name="buttomDebugSaveLoad" Style="{StaticResource MyButtonStyle}" Content="Enregistrer/Recharger" Margin="0,30,10,0" Click="buttomDebugSaveLoad_Click" Background="#2ecc71" BorderBrush="#FF27AE60" MinHeight="22" MaxHeight="22" Grid.Row="1" HorizontalAlignment="Right" Width="130"/>
        </Grid>
        <!--</Canvas>-->
    </Grid>
</Window>
